function showCuisine(cuisineId) {
    // Hide all menu sections
    const menuSections = document.querySelectorAll('.cuisine-menu');
    menuSections.forEach(section => {
        section.style.display = 'none';
    });

    // Show the selected menu section
    const selectedMenu = document.getElementById(cuisineId + '-menu');
    if (selectedMenu) {
        selectedMenu.style.display = 'block';
    }
}